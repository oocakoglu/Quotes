@model QuotesDemo.Core.Dto.QuoteDto
@{

}

<div class="container-fluid p-1">
    <div class="card">
        <div class="card-header text-white bg-dark pt-3">
            <h4>
                <i class="fas fa-plus"></i>
                Update Quote
            </h4>
        </div>
        <div class="card-body">
            <form method="post" onsubmit="saveButton.disabled = true; return true;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"  name="Id" id="Id" />
                <div class="panel panel-primary">
                    <div class="panel-content">
                        <div class="row mb-3">
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label for="Status" class="control-label col-form-label">Author:</label>
                                    <select name="AuthorId" id="AuthorId" class="form-control">
                                        <option value="0">Please Select</option>
                                        @foreach (var item in ViewBag.Authors)
                                        {
                                            @:<option value="@item.Id" @(item.Id == Model.AuthorId ? "selected" : "")>@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea name="Text" class="ckeditor" required>@Model.Text</textarea>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="panel-footer mt-2">
                        <a class="btn btn-danger" asp-action="Index"><span class="icon_close_alt"></span> Cancel</a>
                        <button class="btn btn-success" type="submit" name="saveButton"> <span class="icon_check_alt"></span> Save</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
